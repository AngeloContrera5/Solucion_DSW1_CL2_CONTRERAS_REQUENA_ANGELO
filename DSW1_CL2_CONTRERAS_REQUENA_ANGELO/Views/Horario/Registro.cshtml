<div>
    @using (Html.BeginForm("Registro", "Virtuales"))
    {
                @Html.Hidden("codHorario", Model.codHorario)

                <span class="form-label">Dni</span>
                @Html.TextBox("dni", "")
                <br />
                <span class="form-label">Nombre</span>
                @Html.TextBox("nombre", "")
                <br />

                <span class="form-label">Email</span>
                @Html.TextBox("email", "")
                <br />

                <span class="form-label">Telefono</span>
                @Html.TextBox("telefono", "")
                <br />
                <p>
                    <input type="submit" value="Ingresar" class="btn btn-default" />
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
                </p>
     }
            @ViewBag.mensaje
</div>

