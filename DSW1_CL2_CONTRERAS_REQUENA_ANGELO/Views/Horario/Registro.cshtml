@model DSW1_CL2_CONTRERAS_REQUENA_ANGELO.Models.Horario

@{
    ViewBag.Title = "Registro";
}

<h2 style="text-align:center">Registro al Curso</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.codHorario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.codHorario)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nomCurso)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomCurso)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.codCurso)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.codCurso)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fecInicio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecInicio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fecTerminio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecTerminio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.vacantes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vacantes)
        </dd>

    </dl>
