@model IEnumerable<DSW1_CL2_CONTRERAS_REQUENA_ANGELO.Models.Horario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div>
    @using (Html.BeginForm())
    {
        <span style="font-style:oblique">Selecciona un curso</span>
        @Html.DropDownList("cod", (SelectList)ViewBag.curso)
        <button>Consulta</button>
    }
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codHorario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nomCurso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codCurso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecTerminio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vacantes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codHorario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nomCurso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codCurso)
        </td>
        <td>
            @Html.ValueFor(model => item.fecInicio, "{0:dd/MM/yyyy}")
        </td>
        <td>
            @Html.ValueFor(model => item.fecTerminio, "{0:dd/MM/yyyy}")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vacantes)
        </td>
        <td>
            @Html.ActionLink("Registrar", "Registro", new {  id=item.codHorario }) 
        </td>
    </tr>
}

</table>
